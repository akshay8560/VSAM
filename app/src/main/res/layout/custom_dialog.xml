<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:layout_margin="16dp"
                android:textColor="@color/textColor"
                android:text="Login if you've already signed up with Linkedin | Facebook"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Conitnue with linkedin"
                    android:drawableLeft="@drawable/ic_linkedin"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawablePadding="16dp"
                    android:textColor="@color/linkedinColor"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="startFacebookLogin"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Conitnue with facebook"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawablePadding="16dp"
                    android:textColor="@color/fbColor"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>